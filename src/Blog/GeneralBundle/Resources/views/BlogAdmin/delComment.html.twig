{% extends "BlogGeneralBundle::layoutAdmin.html.twig" %}

{% block title %}Supprimer un commentaire{% endblock %}

{% block body %}
    <h2>Supprimer un commentaire</h2>
    <p>
        Etes-vous certain de vouloir supprimer le commentaire "{{ comment.title }}" ?
    </p>
    {{ form_start(form) }}
        <a href="{{ path('admin') }}" class="btn btn-default">Retour au tableau de bord</a>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_end(form) }}
{% endblock %}
