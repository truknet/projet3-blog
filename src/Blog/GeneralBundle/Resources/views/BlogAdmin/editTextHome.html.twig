{% extends "BlogGeneralBundle::layoutAdmin.html.twig" %}

{% block title %}Editer page d'accueil{% endblock %}

{% block body %}
    <h3>Editer la page d'accueil</h3>
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.txthome, "Texte de la page d'accueil", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.txthome) }}
            <div class="col-sm-12">
                {{ form_widget(form.txthome, {'attr': {'class': 'form-control tinymce'}}) }}
            </div>
        </div>

        <input type="submit" value="Valider" class="btn btn-primary" />
        <a href="{{ path('admin_configuration') }}" class="btn btn-default">Retour Ã  la configuration</a>
        <a href="{{ path ('admin') }}" class="btn btn-default">Retour au tableau de bord</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascript %}
    {{ tinymce_init({
        theme: {'simple':{'language': app.request.locale, 'height': 400 }},
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
        autosave_ask_before_unload: false})
    }}
{% endblock %}