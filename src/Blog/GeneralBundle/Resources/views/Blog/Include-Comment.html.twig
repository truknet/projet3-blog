{# Boucle d'Affichage des panels Commentaires #}
<div class="comment1">

    {% for comment in article.comments %}
        {% if comment.published == true %}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ comment.title }}</h3>
                </div>
                <div class="panel-body">
                    {{ comment.content }}
                    <hr>
                    Auteur : {{ article.author }}
                    - Date de création : {{ article.dateCreate|date('d/m/Y') }}
                    {{ comment.dateUpdate is empty ? "" : ' - Mise à jour : ' ~ comment.dateUpdate|date("d/m/Y") }}
                    <button class="boutoncomment btn btn-primary btn-xs" type="button" data-toggle="collapse" data-target="#Comment1{{ comment.id }}" aria-expanded="false" aria-controls="Comment1{{ comment.id }}">
                        <i class="fa fa-comments"></i> Commenter
                    </button>
                </div>
            </div>
            <div class="collapse , comment2" id="Comment1{{ comment.id }}">
                <div class="well">

                </div>
            </div>

            <div class="comment1">
                {% for children in comment.children %}
                    {% if children.published == true %}

                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">{{ children.title }}</h3>
                            </div>
                            <div class="panel-body">
                                {{ children.content }}
                                <hr>
                                Auteur : {{ children.author }}
                                - Date de création : {{ children.dateCreate|date('d/m/Y') }}
                                {{ children.dateUpdate is empty ? "" : ' - Mise à jour : ' ~ children.dateUpdate|date("d/m/Y") }}
                                <button class="boutoncomment btn btn-primary btn-xs" type="button" data-toggle="collapse" data-target="#Comment1{{ children.id }}" aria-expanded="false" aria-controls="Comment1{{ comment.id }}">
                                    <i class="fa fa-comments"></i> Commenter
                                </button>
                            </div>
                        </div>
                        <div class="collapse , comment2" id="Comment1{{ children.id }}">
                            <div class="well">

                            </div>
                        </div>
                    {% endif %}
                    <div class="comment1">
                        {% for children in children.children %}
                            {% if children.published == true %}

                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">{{ children.title }}</h3>
                                    </div>
                                    <div class="panel-body">
                                        {{ children.content }}
                                        <hr>
                                        Auteur : {{ children.author }}
                                        - Date de création : {{ children.dateCreate|date('d/m/Y') }}
                                        {{ children.dateUpdate is empty ? "" : ' - Mise à jour : ' ~ children.dateUpdate|date("d/m/Y") }}
                                        <button class="boutoncomment btn btn-primary btn-xs" type="button" data-toggle="collapse" data-target="#Comment1{{ children.id }}" aria-expanded="false" aria-controls="Comment1{{ comment.id }}">
                                            <i class="fa fa-comments"></i> Commenter
                                        </button>
                                    </div>
                                </div>
                                <div class="collapse , comment2" id="Comment1{{ children.id }}">
                                    <div class="well">

                                    </div>
                                </div>
                            {% endif %}
                            <div class="comment1">
                                {% for children in children.children %}
                                    {% if children.published == true %}

                                        <div class="panel panel-primary">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">{{ children.title }}</h3>
                                            </div>
                                            <div class="panel-body">
                                                {{ children.content }}
                                                <hr>
                                                Auteur : {{ children.author }}
                                                - Date de création : {{ children.dateCreate|date('d/m/Y') }}
                                                {{ children.dateUpdate is empty ? "" : ' - Mise à jour : ' ~ children.dateUpdate|date("d/m/Y") }}
                                                <button class="boutoncomment btn btn-primary btn-xs" type="button" data-toggle="collapse" data-target="#Comment1{{ children.id }}" aria-expanded="false" aria-controls="Comment1{{ comment.id }}">
                                                    <i class="fa fa-comments"></i> Commenter
                                                </button>
                                            </div>
                                        </div>
                                        <div class="collapse , comment2" id="Comment1{{ children.id }}">
                                            <div class="well">

                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                    {% endfor %}
                    </div>
                {% endfor %}
            </div>

        {% endif %}
    {% endfor %}
</div>
